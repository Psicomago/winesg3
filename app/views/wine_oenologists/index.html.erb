<p id="notice"><%= notice %></p>

<h1>Wine Oenologists</h1>

<table>
  <thead>
    <tr>
      <th>Wine</th>
      <th>Oenologist</th>
      <th>Nota</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wine_oenologists.each do |wine_oenologist| %>
      <tr>
        <td><%= wine_oenologist.wine %></td>
        <td><%= wine_oenologist.oenologist %></td>
        <td><%= wine_oenologist.nota %></td>
        <td><%= wine_oenologist.comment %></td>
        <td><%= link_to 'Show', wine_oenologist %></td>
        <td><%= link_to 'Edit', edit_wine_oenologist_path(wine_oenologist) %></td>
        <td><%= link_to 'Destroy', wine_oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

